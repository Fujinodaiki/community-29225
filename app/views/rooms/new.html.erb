<div class='chat-room-form'>
  <h1>新規コミュニティの作成</h1>
  <%=form_with model: @room, local: true do |f|%>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :コミュニティ名, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :name, class: 'chat__room_name chat-room-form__input', placeholder: 'コミュニティ名を入力してください'%>
      </div>
    </div>

    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :カテゴリー, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :category, class: 'chat__room_name chat-room-form__input', placeholder: '何を目的としたコミュニティかわかるように記述してください'%>
      </div>
    </div>

    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :紹介文, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_area :comment, class: 'chat__room_name chat-room-form__text', placeholder: 'コミュニティの紹介文を記述してください。'%>
      </div>
    </div>
    <input name="room[user_ids][]" type="hidden" value=<%= current_user.id %>>

    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'></div>
      <div class='chat-room-form__field--right'>
        <%= f.submit 'create community'  %>
      </div>
    </div>
  <% end %>
</div>
